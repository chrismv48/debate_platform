<p id="notice"><%= notice %></p>

<h1>Arguments</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Premises</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @arguments.each do |argument| %>
      <tr>
        <td><%= link_to "(#{argument.id}) #{argument.name}", argument_path(argument) %></td>
        <td>
          <ul class="list-unstyled">
          <% argument.premises.each do |premise| %>
            <li><%= link_to "(#{premise.id}) #{premise.name}", premise_path(premise) %></li>
          <% end %>
          </ul>
        </td>
        <td>
          <%= link_to 'Edit', edit_argument_path(argument) %> |
          <%= link_to 'Destroy', argument, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

