<p id="notice"><%= notice %></p>

<h1>Sources</h1>

<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Premises</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @sources.each do |source| %>
    <tr>
      <td><%= link_to "(#{source.id}) #{source.name}", source_path(source) %></td>
      <td>
        <ul class="list-unstyled">
          <% source.premises.each do |premise| %>
            <li><%= link_to "(#{premise.id}) #{premise.name}", premise_path(premise) %></li>
          <% end %>
        </ul>
      </td>
      <td>
        <%= link_to 'Edit', edit_source_path(source) %> |
        <%= link_to 'Destroy', source, method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Source', new_source_path%>
